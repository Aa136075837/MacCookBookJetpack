<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.DetailActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/mDetailToolbar"
            android:layout_width="match_parent"
            android:layout_height="44dp"/>

    <TextView
            android:id="@+id/mFoodNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/mDetailToolbar"/>

    <ImageView
            android:id="@+id/detail_sign"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mFoodNameTv"
            android:background="@color/colorPrimaryDark"/>

    <TextView
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/detail_sign"
            app:layout_constraintTop_toBottomOf="@+id/mFoodNameTv"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/black"
            android:layout_height="40dp"
            android:text="@string/material"/>

    <TextView
            android:id="@+id/mDetailMaterialTv"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_sign"
            android:layout_height="wrap_content"/>


    <ImageView
            android:id="@+id/detail_sign_method"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mDetailMaterialTv"
            android:background="@color/colorPrimaryDark"/>

    <TextView
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/detail_sign_method"
            app:layout_constraintTop_toBottomOf="@+id/mDetailMaterialTv"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/black"
            android:layout_height="40dp"
            android:text="@string/method"/>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mDetailRv"
            app:layout_constraintTop_toBottomOf="@+id/detail_sign_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_detail_proces"/>

</androidx.constraintlayout.widget.ConstraintLayout>